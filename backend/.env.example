# Database Configuration
MONGODB_URI=mongodb://localhost:27017/helpdesk_db

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Configuration
# Google Gemini API Key for LLM operations
GOOGLE_API_KEY=your-google-gemini-api-key-here

# Pinecone Configuration for Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment-here
PINECONE_INDEX_NAME=helpdesk-knowledge-base

# AI Model Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=1000

# HSA Configuration
HSA_ENABLED=true
HSA_CONFIDENCE_THRESHOLD=0.0

# RAG Configuration
RAG_ENABLED=true
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.6

# Logging Configuration
LOG_LEVEL=INFO
AI_LOG_LEVEL=DEBUG

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=10
SCHEDULER_UNIT=seconds
